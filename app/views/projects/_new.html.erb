<div class="row top15">
  <%= form_for project, html: {class: "form-horizontal"}, remote: true do |p| %>
    <div class="form-group">
      <%= p.label :name, "Name:", class: "control-label col-sm-2" %>
      <div class="col-sm-8">
        <%= p.text_field :name, class: "form-control", required: true, value: project.name %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= p.submit project.new_record? ? "Create Project": "Update Project", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>