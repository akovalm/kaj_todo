<div class="row top15">
  <%= form_for task, html: {class: "form-horizontal"}, remote: true do |t| %>
    <div class="form-group">
      <%= t.label :name, "Name:", class: "control-label col-sm-2" %>
      <div class="col-sm-8">
        <%= t.text_field :name, class: "form-control", required: true, value: task.name %>
      </div>
    </div>
    <div class="form-group">
      <%= t.label :status, "Status:", class: "control-label col-sm-2" %>
      <div class="col-sm-8">
        <%= t.select :status, Task::STATUSES.invert, {}, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= t.label :project_id, "Project:", class: "control-label col-sm-2" %>
      <div class="col-sm-8">
        <%= t.select :project_id, Project.all.map{|p| [p.name, p.id]}, {}, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= t.label :deadline, "Deadline:", class: "control-label col-sm-2" %>
      <div class="col-sm-8">
        <%= t.text_field :deadline, data: {provide: 'datepicker'}, class: "form-control" %>
        <%#= t.text_field :deadline, class: "datepicker" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= t.submit task.new_record? ? "Create Task": "Update Task", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>